# Staging Environment Configuration
# Use: docker compose -f docker-compose.yaml -f docker-compose.staging.yaml --env-file .env.staging up -d

BUILD_ENV=staging
ENVIRONMENT=staging

# MySQL / Database
MYSQL_ROOT_PASSWORD=staging_root_secure_pwd_change_me
MYSQL_DATABASE=wordpress_staging
MYSQL_USER=wp_user_staging
MYSQL_PASSWORD=wp_pass_staging_secure_change_me

# WordPress
WP_TABLE_PREFIX=wp_stg_

# Ports
WP_PORT=9080
PHPMYADMIN_PORT=9081

# Debug & Logging (staging: minimal debug, log to file)
WP_DEBUG=false
WP_DEBUG_DISPLAY=false
WP_DEBUG_LOG=/var/www/html/wp-content/debug.log

# Redis
REDIS_MAXMEMORY=256mb
REDIS_POLICY=allkeys-lfu

# Container Names & Network
COMPOSE_PROJECT_NAME=wordpress-staging

# Resource Limits (staging: moderate)
MEMORY_LIMIT=1024m
MEMORY_RESERVATION=512m
