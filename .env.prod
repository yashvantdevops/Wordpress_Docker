# Production Environment Configuration
# Use: docker compose -f docker-compose.yaml -f docker-compose.prod.yaml --env-file .env.prod up -d
# IMPORTANT: Change all passwords and credentials before deploying!

BUILD_ENV=production
ENVIRONMENT=prod

# MySQL / Database (use strong, unique passwords!)
MYSQL_ROOT_PASSWORD=prod_root_very_secure_password_change_immediately
MYSQL_DATABASE=wordpress_prod
MYSQL_USER=wp_user_prod
MYSQL_PASSWORD=wp_pass_prod_very_secure_change_immediately

# WordPress
WP_TABLE_PREFIX=wp_prod_

# Ports (prod: use reverse proxy/load balancer; containers run on internal ports)
WP_PORT=80
PHPMYADMIN_PORT=3306

# Debug & Logging (production: NO debug output)
WP_DEBUG=false
WP_DEBUG_DISPLAY=false
WP_DEBUG_LOG=/var/www/html/wp-content/debug.log

# Redis
REDIS_MAXMEMORY=512mb
REDIS_POLICY=volatile-lfu

# Container Names & Network
COMPOSE_PROJECT_NAME=wordpress-prod

# Resource Limits (production: strict)
MEMORY_LIMIT=2048m
MEMORY_RESERVATION=1536m
CPUS_LIMIT=2.0
CPUS_RESERVATION=1.5

# Optional: External Database (comment out to use containerized MySQL)
# EXTERNAL_DB_HOST=prod-db.example.com
# EXTERNAL_DB_PORT=3306

# Backup & Recovery
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
