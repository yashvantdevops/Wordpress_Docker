# Development Environment Configuration
# Use: docker compose -f docker-compose.yaml -f docker-compose.dev.yaml --env-file .env.dev up -d

BUILD_ENV=development
ENVIRONMENT=dev

# MySQL / Database
MYSQL_ROOT_PASSWORD=change_me_root
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=change_me_password

# WordPress
WP_TABLE_PREFIX=wp_

# Ports (dev: higher ports to avoid conflicts)
WP_PORT=8080
PHPMYADMIN_PORT=8081

# Debug & Logging
WP_DEBUG=true
WP_DEBUG_DISPLAY=true
WP_DEBUG_LOG=/var/www/html/wp-content/debug.log

# Redis
REDIS_MAXMEMORY=128mb
REDIS_POLICY=allkeys-lru

# Container Names & Network
COMPOSE_PROJECT_NAME=wordpress-dev
